<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <TextView
        android:id="@+id/textViewHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/history"
        android:textColor="#555555"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/result"
        android:textColor="#444444"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:columnCount="5"
        android:rowCount="7"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_mc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_mc"
            android:onClick="onMemoryClick"
            style="@style/MemoryButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/button_mr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_mr"
            android:onClick="onMemoryClick"
            style="@style/MemoryButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_m_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_m_plus"
            android:onClick="onMemoryClick"
            style="@style/MemoryButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_m_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_m_minus"
            android:onClick="onMemoryClick"
            style="@style/MemoryButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_ms"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_ms"
            android:onClick="onMemoryClick"
            style="@style/MemoryButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_sin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_sin"
            android:onClick="onFunctionClick"
            style="@style/FunctionButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/button_cos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_cos"
            android:onClick="onFunctionClick"
            style="@style/FunctionButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_tan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_tan"
            android:onClick="onFunctionClick"
            style="@style/FunctionButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_log"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_log"
            android:onClick="onFunctionClick"
            style="@style/FunctionButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_ln"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_ln"
            android:onClick="onFunctionClick"
            style="@style/FunctionButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/button_open_parenthesis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_open_parenthesis"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_close_parenthesis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_close_parenthesis"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_power"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_power"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_sqrt"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_factorial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_factorial"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Yedi"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Sekiz"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Dokuz"/>

        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_del"
            android:onClick="onDeleteClick"
            style="@style/DeleteButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Sil"/>

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_ac"
            android:onClick="onClearClick"
            style="@style/ACButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Temizle"/>

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Dört"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Beş"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Altı"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="x"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Çarp"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Böl"/>

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Bir"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="İki"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Üç"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Artı"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-"
            android:onClick="onOperationClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="32sp"
            android:layout_margin="4dp"
            android:contentDescription="Eksi"/>

        <Button
            android:id="@+id/percentage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_percentage"
            android:onClick="onPercentageClick"
            style="@style/PercentageButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Yüzde"/>

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Sıfır"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:onClick="onNumberClick"
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Nokta"/>

        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_ans"
            android:onClick="onAnswerClick"
            style="@style/OperationButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Cevap"/>

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/button_equals"
            android:onClick="onEqualsClick"
            style="@style/EqualsButton"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:contentDescription="Eşittir"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>